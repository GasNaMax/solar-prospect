---
const {
	href,
	value,
	isSecondary,
	disabled,
	class: className,
	...props
} = Astro.props;
---

<button
	class:list={["link-btn", className, { secondary: isSecondary }]}
	{...props}
>
	<a href={href}>
		{value}
	</a>
</button>

<style>
	.link-btn {
		cursor: pointer;
		background: linear-gradient(135deg, var(--yellow), 60%, var(--yellow2));
		opacity: 0.8;

		font-family: var(--font-secondary);
		font-size: 1.5rem;
		line-height: 1.5rem;
		font-weight: 700;
		text-shadow: 1px 1px 3px #161616;

		width: min-content;
		min-height: 40px;
		padding: 0;
		border: none;
		border-radius: 26px;
		box-shadow: 0px 40px 40px 10px rgba(0, 0, 0, 0.378);

		transition: all 0.2s ease-in-out;
		margin-right: 1.5rem;
	}
	.link-btn:last-of-type {
		margin-right: 0;
	}
	.link-btn a {
		width: 100%;
		height: 100%;
		padding: 15px 25px;
	}
	.link-btn.secondary {
		background: linear-gradient(135deg, var(--yellow2), 30%, var(--orange));
		opacity: 0.9;
	}
	.link-btn:hover {
		scale: 1.1;
		opacity: 1;
		filter: brightness(1.2);
	}
	.link-btn:active {
		scale: 0.9;
	}
</style>
