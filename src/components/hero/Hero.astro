---
import LinkBtn from "../ui/LinkBtn.astro";
import HighlightCards from "./HighlightCards.astro";
---

<div class='hero-container'>
	<div class='hero-content'>
		<h1 class='hero-title'>Welcome Solar Prospector!</h1>
		<p class='hero-text'>
			Our mission is to make solar cool, affordable, easily obtainable and
			widely adopted
		</p>

		<h2 class='hero-subtitle'>Get your Solars</h2>

		<p class='hero-text'>
			If you want to get clean energy, earn some money or make world a better
			place, you came to the right place.
		</p>

		<HighlightCards />

		<div class='hero-btns'>
			<LinkBtn href='/shop' value='Buy' />
			<LinkBtn href='/blog' value='Learn' isSecondary />
		</div>
	</div>
</div>

<style>
	.hero-container {
		width: 100%;
		height: calc(100vh - var(--nav-height));
	}

	.hero-content {
		height: 100%;
		width: 50vw;
		padding: 10px 40px;

		display: flex;
		flex-direction: column;
		align-items: flex-start;
		justify-content: center;
	}
	.hero-content > * {
		margin-bottom: 10px;
	}

	.hero-title {
		font-size: 2rem;
		font-weight: 700;
		text-shadow: -2px -3px 7px rgb(0 0 0 / 52%);
	}

	.hero-text {
		max-width: 400px;
		font-size: 1.25rem;
		text-shadow: 1px 1px 2px black;
	}

	.hero-btns {
		height: 52px;
		display: flex;
		margin-top: 1rem;
	}

	@media screen and (max-width: 630px) {
		.hero-content {
			width: 100%;
		}
	}
	@media screen and (max-width: 800px) {
		.hero-text {
			font-size: 1rem;
		}
	}

	@media screen and (min-width: 1200px) {
		.hero-content {
			margin-left: 10%;
		}
	}
</style>
